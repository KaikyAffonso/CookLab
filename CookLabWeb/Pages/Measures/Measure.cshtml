@page
@model MeasureModel
@{
    <form method="post">
        <div class="form-group">
            <label>Measure</label>
            <input name="name" class="form-control" placeholder="Enter Measure">
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Measure</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var measure in Model._measures)
            {
                <tr>
                    <th scope="row">@measure.Id</th>
                    <td>@measure.Name</td>
                    <td>
                        <a asp-page="/Measures/Update" asp-route-id="@measure.Id"><button type="button" class="btn btn-primary btn-sm">Update</button></a> /
                        <a asp-page="/Measures/Delete" asp-route-id="@measure.Id"><i class="fa-solid fa-trash"></i> Delete</a> /
                        <a asp-page="/Measures/Retrieve" asp-route-id="@measure.Id"><img width="25" height="25" src="https://img.icons8.com/dusk/64/ophthalmology.png" alt="ophthalmology" /></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
