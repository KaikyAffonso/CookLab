@page
@model CategoryModel
@{
    <form method="post">
        <div class="form-group">
            <label>Name</label>
            <input name="name" class="form-control" placeholder="Enter Name">
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.categories)
            {
                <tr>
                    <th scope="row">@category.Id</th>
                    <td>@category.Name</td>
                    <td>
                        <a asp-page="/Categories/Update" asp-route-id="@category.Id"><button type="button" class="btn btn-primary btn-sm">Update</button></a> /
                        <a asp-page="/Categories/Delete" asp-route-id="@category.Id"><img width="25" height="25" src="https://img.icons8.com/stickers/100/delete-trash.png" alt="delete-trash" /></a> /
                        <a asp-page="/Categories/Retrieve" asp-route-id="@category.Id"><img width="25" height="25" src="https://img.icons8.com/dusk/64/ophthalmology.png" alt="ophthalmology" /></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
