@page
@model IngredientModel
@{

    <form method="post">
        <div class="form-group">
            <label>Ingredient</label>
            <input name="name" class="form-control" placeholder="Enter Ingridient">
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Ingredient</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ingredient in Model._ingredients)
            {
                <tr>
                    <th scope="row">@ingredient.Id</th>
                    <td>@ingredient.Name</td>
                    <td>
                        <a asp-page="/Ingredients/Update" asp-route-id="@ingredient.Id"><button type="button" class="btn btn-primary btn-sm">Update</button></a> /
                        <a asp-page="/Ingredients/Delete" asp-route-id="@ingredient.Id"><img width="25" height="25" src="https://img.icons8.com/stickers/100/delete-trash.png" alt="delete-trash" /></a> /
                        <a asp-page="/Ingredients/Retrieve" asp-route-id="@ingredient.Id"><img width="25" height="25" src="https://img.icons8.com/dusk/64/ophthalmology.png" alt="ophthalmology" /></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>




}
