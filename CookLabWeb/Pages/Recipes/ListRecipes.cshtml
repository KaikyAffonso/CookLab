@page
@model CookLabWeb.Pages.Recipes.ListRecipesModel
@{
}

<div class="container text-center">
    <div class="row row-cols-3">
        @foreach (var recipes in Model.Recipes)
        {
            if (recipes.IsApproved == true)
            {
                <div class="col">

                    <div class="card" style="width: 18rem;">
                        <img src="..." class="card-img-top" alt="...">                      
                        <div class="card-body">
                            <h5 class="card-title">@recipes.Title</h5>
                            <p class="card-text">@recipes.PrepTime Minutes</p>
                            <a class="btn btn-primary" asp-page="/Recipes/UpdateRecipe" asp-route-id="@recipes.Id"><i class="fa-regular fa-pen-to-square"></i> Edit </a>

                        </div>
                    
                </div>
                </div>
            }
        }
    </div>
</div>

<h1>Por Aprovar</h1>


@foreach (var recipes in Model.Recipes)
{
    if (recipes.IsApproved == false)
    {
        <div class="col">

            <div class="card" style="width: 18rem;">
                <img src="..." class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@recipes.Title</h5>
                    <p class="card-text">@recipes.PrepTime Minutes</p>
                    <a class="btn btn-primary" asp-page="/Recipes/UpdateRecipe" asp-route-id="@recipes.Id"><i class="fa-regular fa-pen-to-square"></i> Edit </a>

                </div>

            </div>
        </div>
    }
}
