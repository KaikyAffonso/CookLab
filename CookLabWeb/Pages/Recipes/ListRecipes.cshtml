@page
@model CookLabWeb.Pages.Recipes.ListRecipesModel
@{
}

<div class="container text-center">
    <div class="row row-cols-3">
        @foreach (var recipe in Model.Recipes)
        {
            if (recipe.IsApproved == true)
            {
                <div class="col">

                    <div class="card" style="width: 18rem;">
                        @if (recipe.Image.Equals(""))
                        {
                            <img src="/img/noimg.jpg" class="card-img-top" alt="...">
                        }
                        else
                        {
                            <img src="/img/@recipe.Image" class="card-img-top" alt="...">
                        }
                        <div class="card-body">
                            <h5 class="card-title">@recipe.Title</h5>
                            <p class="card-text">@recipe.PrepTime Minutes</p>
                            <a class="btn btn-primary" asp-page="/Recipes/UpdateRecipe" asp-route-id="@recipe.Id"><i class="fa-regular fa-pen-to-square"></i> Edit </a>
                            <a class="btn btn-primary" asp-page="/Recipes/AllRecipe" asp-route-id="@recipe.Id"> View </a>
                            <a class="btn btn-primary" asp-page="/Recipes/Delete" asp-route-id="@recipe.Id"> Delete </a>

                        </div>

                    </div>
                </div>
            }
        }
    </div>
</div>

<h1>Por Aprovar</h1>


@foreach (var recipes in Model.Recipes)
{
    if (recipes.IsApproved == false)
    {
        <div class="col">

            <div class="card" style="width: 18rem;">
                @if (recipes.Image.Equals(""))
                {
                    <img src="/img/noimg.jpg" class="card-img-top" alt="...">
                }
                else
                {
                    
                    <img src="/img/@recipes.Image" class="card-img-top" alt="...">
                }
                <div class="card-body">
                    <h5 class="card-title">@recipes.Title</h5>
                    <p class="card-text">@recipes.PrepTime Minutes</p>
                    <a class="btn btn-primary" asp-page="/Recipes/UpdateRecipe" asp-route-id="@recipes.Id"><i class="fa-regular fa-pen-to-square"></i> Edit </a>
                    <a class="btn btn-primary" asp-page="/Recipes/AllRecipe" asp-route-id="@recipes.Id"> View </a>
                    <a class="btn btn-primary" asp-page="/Recipes/Delete" asp-route-id="@recipes.Id"> Delete </a>
                </div>

            </div>
        </div>
    }
}
