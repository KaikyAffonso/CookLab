@using CookLab.Model;
@model CookLabWeb.Pages.Recipes.RecipeModel
@{


}
<div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="shadow p-3 mb-5 bg-body-tertiary rounded w-75">
        <form method="post" enctype="multipart/form-data" class="w-100 p-3">
            <div class="form-group">
                <div width="35%">
                    <input hidden name="userid" value="@Model.User.Id"class="form-control" >
                    <label for="title">Title</label>
                    <input name="title" class="form-control" placeholder="Enter Title">
                    <br>
                    <label for="method">Descrição</label>
                    <input name="method" class="form-control" placeholder="Describe">
                    <br>
                    <label for="time">Tempo</label>
                    <input type="number" name="time" class="form-control" placeholder="Enter Time">
                    <br>

                    <p>Select a Category</p>
                    <select name="category" class="form-select" aria-label="Default select example">
                        <option selected>Select an option</option>
                        @foreach (Category category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>

                    <p>Select a Difficulty</p>
                    <select name="difficulty" class="form-select" aria-label="Default select example">
                        <option selected>Select an option</option>
                        @foreach (Difficulty difficulties in Model.Difficulties)
                        {
                            <option value="@difficulties.Id">@difficulties.Name</option>
                        }
                    </select>

                    
                    <div class="input-group">
                        <input type="file" name="image" asp-for="@Model.Image" class="form-control" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload">
                      
                    </div>

                 @*   <br>
                    <p>Please select: Is Approved?</p>
                    <input type="radio" id="iszero" name="approved" value="false">
                    <label for="iszero">No</label>
                    <br>
                    <input type="radio" id="isone" name="approved" value="true">
                    <label for="isone">Yes</label>
                    <br>*@
                </div>
            </div>
            <br>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

</div>
