@model CookLabWeb.Pages.Recipes.RecipeModel
@{
}
<form method="post">
    <div class="form-group">
        <label>Title</label>
        <input name="title" class="form-control" placeholder="Enter Title">
        <br />
        <label>Descrição</label>
        <input name="method" class="form-control" placeholder="Describe">
        <br />
        <label>Tempo</label>
        <input type="number" name="time" class="form-control" placeholder="Enter Time">
        <br />

        @foreach(var category in Model.Category)
        {
            <div class="form-check">
                <input type="radio" id="@category.Id" name="fav_language" value="@category.Name">
                <label for="html">@category.Name</label><br>
                
               
            </div>

        }





    </div>
    <br />
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
