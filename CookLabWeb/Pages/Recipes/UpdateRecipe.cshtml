@page
@using CookLab.Model;
@model CookLabWeb.Pages.Recipes.UpdateRecipeModel
@{
}
<div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="shadow p-3 mb-5 bg-body-tertiary rounded w-75">
        <form method="post" class="w-100 p-3" enctype="multipart/form-data">
            <div class="form-group">
                <div width="35%">
                    <label for="title">Title</label>
                    <input name="title" class="form-control" value="@Model.Recipe.Title">
                    <input hidden name="userid" class="form-control" value="@Model.User.Id">
                    <br>
                    <label for="method">Descrição</label>
                    <input name="method" class="form-control" value="@Model.Recipe.PrepMethod">
                    <br>
                    <label for="time">Tempo</label>
                    <input type="number" name="time" class="form-control" value="@Model.Recipe.PrepTime">
                    <br>
                    <input hidden type="number" name="id" class="form-control" value="@Model.Recipe.Id">
                    <p>Select a Category</p>
                    <select name="category" class="form-select" aria-label="Default select example">
                        <option selected value="@Model.Recipe.Category.Id">@Model.Recipe.Category.Name</option>
                        @foreach (Category category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>

                    <p>Select a Difficulty</p>
                    <select name="difficulty" class="form-select" aria-label="Default select example">
                        <option selected value="@Model.Recipe.Difficulty.Id">@Model.Recipe.Difficulty.Name</option>
                        @foreach (Difficulty difficulties in Model.Difficulties)
                        {
                            <option value="@difficulties.Id">@difficulties.Name</option>
                        }
                    </select>
                    <br>
              
                    <br>
                    <p>Please select: Is Approved?</p>
                    <input type="radio" id="iszero" name="approved" value="false">
                    <label for="iszero">No</label>
                    <br>
                    <input type="radio" id="isone" name="approved" value="true">
                    <label for="isone">Yes</label>
                    <br>

                    
                </div>
            </div>
            <br>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
